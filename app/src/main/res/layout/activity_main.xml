<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <GridLayout
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="14dp"
        android:background="#242e40"
        >

        <!-- 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ocr"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="3dp"
            android:foreground="@drawable/effect"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="3dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ocr"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ocr_scanner"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:padding="10sp"
                tools:ignore="RtlSymmetry">

            </TextView>
        </androidx.cardview.widget.CardView>

        <!-- 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/screenshot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            android:foreground="@drawable/effect"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/screenshot"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="screenshot_scanner"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:padding="10sp"
                tools:ignore="RtlSymmetry"/>
        </androidx.cardview.widget.CardView>

        <!-- 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/secretphotoviewer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            android:foreground="@drawable/effect"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/secret"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="secret_photo_viewer"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:padding="10sp"
                tools:ignore="RtlSymmetry"/>
        </androidx.cardview.widget.CardView>

        <!-- 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/translator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            android:foreground="@drawable/effect"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/translation"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="translator"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:padding="10sp"
                tools:ignore="RtlSymmetry"/>
        </androidx.cardview.widget.CardView>

        <!-- 5 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/filereducer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            android:foreground="@drawable/effect"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/compression"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="file_reducer"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:padding="10sp"
                tools:ignore="RtlSymmetry"/>
        </androidx.cardview.widget.CardView>

        <!-- 6 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/objectspeedcalculator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            android:foreground="@drawable/effect"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ocr"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="object_speed_calculator"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:padding="10sp"
                tools:ignore="RtlSymmetry"/>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>